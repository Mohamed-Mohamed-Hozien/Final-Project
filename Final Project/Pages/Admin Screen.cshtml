Model.up=true;
}>Update Employee</button>
            <button class="btn btn-primary" data-toggle="modal" data-target="#reportsModal">Reports</button>

        </div>
            
        <!-- Other columns... -->
    </div>

        
    <div class="row align-items-end">
        <div class="col">
            
        </div>
        <!-- Other columns... -->
    </div>


</div> 


<form method="post">
    <div class="modal fade" id="reportsModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reports</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
                </div>

                <div class="modal-body">


                    
                    <a class="button" asp-page="/Sales">Sales Reports</a>
                    <a class="button" asp-page="/Purchasing">Purchasing Reports</a>
                    <a class="button" asp-page="/Inventory">Inventory Reports</a>



                    <!-- Other input fields... -->

                </div>







            </div>
        </div>
    </div>
</form>




<form method="post">
    
<div class="modal fade" id="addEmployeeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Employee</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
            </div>
            
            <div class="modal-body">
                
                
                    <input type="text" name="userNameInput" id="userNameInput" placeholder="Enter UserName" />
                    <input type="password" name="passInput" id="passInput" placeholder="Enter Password" />

                    <input type="number" name="numberInput" id="numberInput" placeholder="Enter Phone Number" />
                    <input type="email" name="mailInput" id="mailInput" placeholder="Enter E_Mail" />

                    <input type="text" name="idInput" id="idInput" maxlength="4" placeholder="Enter ID" />
                    <input type="text" name="ssnInput" id="ssnInput" placeholder="Enter SSN" />
                    <input type="text" name="roleInput" id="roleInput" maxlength="1" placeholder="Enter Role" />
                    <select id="roleInput" name="roleInput">
                        
                        <option value="S">Sales</option>
                        <option value="P">Purchasing</option>
                        <option value="I">Inventory</option>
                        

                    </select>
                    <div class="modal-footer">

                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                        <input type="submit" class="btn btn-primary" title="Save Changes" />

                    </div>



                    <!-- Other input fields... -->
                
            </div>
            






        </div>
    </div>
</div>
</form>

