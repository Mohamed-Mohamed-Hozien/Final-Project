<div style="margin:7% auto ; max-width: 600px ; max-height: 400px">

 <h1>Welcome,@Model.l</h1>
    <div class="row align-items-start">
        <div class="col">
            <button class="btn btn-success" id="addd" name="addd" data-toggle="modal" data-target="#addEmployeeModal" onclick="@{Model.add();
Model.up=false;}">Add Employee</button>
            <button class="btn btn-warning" id="updatee" name="updatee" data-toggle="modal" data-target="#updateEmployeeModal" onclick=@{
