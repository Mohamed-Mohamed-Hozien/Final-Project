<body>
    <div class="data_container">
        <table class="table">
            <tr>
                <th>Customer ID</th>
                <th>Email</th>
                <th>Bank Account</th>
            </tr>

            @{

                for (int i = 0; i < @Model.Customer_ID.Count; i++)
                {

                    <tr>
                        <td>@Model.Customer_ID[i]</td>


                        <td>@Model.Email[i]</td>
                        <td>@Model.Bank_Account[i]</td>

                    </tr>
                }


            }



        </table>"

    </div>
</body>

</html>