@page
@model Final_Project.Pages.Product_Supplies_DataModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/css/jobs.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<div class="data_container">
    <table class="table">
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Supplies ID</th>
            <th>Supplies Qantity</th>
            <th>Supplies State</th>

        </tr>

        @{

            for (int i = 0; i < @Model.P_ID.Count; i++)
            {

                <tr>
                    <td>@Model.P_ID[i]</td>


                    <td>@Model.Name[i]</td>


                    <td>@Model.Price[i]</td>

                    <td>@Model.Quantity[i]</td>

                    <td>@Model.Supplies_ID[i]</td>
                    <td>@Model.Supplies_Quantity[i]</td>
                    <td>@Model.Supply_State[i]</td>

                </tr>
            }
        }
        </table>
        </div>
</html>