@page
@model Final_Project.Pages.Sales_OrderModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <meta charset="UTF-8">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/jobs.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"   />

</head>

<body>
   
    <header>
        <h2>Sales Order</h2>
    </header>
    <div class="position">
        <div class="selector">
            <button>Filter by date</button>
            <button>Filter by costumer</button>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="1022" height="641" viewBox="0 0 1022 641" fill="none">
            <path d="M168.53 41.1814L168.946 42.0076H169.87H982.175L1020.4 639.5H1.5V1.5H148.58L168.53 41.1814Z"
                fill="white" stroke="#1D006E" stroke-width="3" />
            
               
           <table class="table">
                <tr>
                    <th>Customer Id</th>
                    <th>Employee ID</th>
                    <th>State</th>
                    <th>Order ID</th>
                </tr>

                @{

                    for (int i = 0; i < @Model.C_ID.Count; i++)
                    {

                        <tr>
                            <td>@Model.C_ID[i]</td>


                            <td>@Model.E_ID[i]</td>


                            <td>@Model.state[i]</td>

                            <td>@Model.O_ID[i]</td>

                            

                        </tr>
                    }
                    
                   

                }



            </table>
        </svg>
    </div>
    <form method="post">
        <input type="text" placeholder="Enter ID to Confirm" id="confirmedOrderID" name="confirmedOrderID" />
        <button class="btn btn-primary" type="submit">
            Confirm Order
        </button>
    </form>
        
   
    <div class="side-buttons">
        <a type="link" asp-page="/Sales Delivery">Sales Delivery</a>

        <a type="link" asp-page="/addAndPropertiesSalesOrder">Add</a>
        <button data-toggle="modal">Properties</button>
    </div>

    

</body>

</html>