@page
@model Final_Project.Pages.Supplies_MissingModel
@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/jobs.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"   />
</head>

<body>
    <header>
        <h2>Supplies Missing</h2>
    </header>
    <div class="position">
        <div class="selector">
            <button>Filter by date</button>
            <button>Filter by costumer</button>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" width="1022" height="641" viewBox="0 0 1022 641" fill="none">
            <path d="M168.53 41.1814L168.946 42.0076H169.87H982.175L1020.4 639.5H1.5V1.5H148.58L168.53 41.1814Z"
                fill="white" stroke="#1D006E" stroke-width="3" />
            <div class="data_container">
                <table class="table">
                    <tr>
                        <th>Supplies ID</th>
                        <th>Supplier Company</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Total cost</th>
                        <th>state</th>

                    </tr>

                    @{

                        for (int i = 0; i < @Model.Supplies_ID.Count; i++)
                        {

                            <tr>
                                <td>@Model.Supplies_ID[i]</td>


                                <td>@Model.Supplier_Company[i]</td>


                                <td>@Model.Description[i]</td>

                                <td>@Model.Quantity[i]</td>

                                <td>@Model.Total_cost[i]</td>
                                
                                <td>@Model.state[i]</td>

                            </tr>
                        }
                    }



                </table>
            </div>
        </svg>
    </div>
    <div class="side-buttons">
        <a type="link" asp-page="/Supplies Missing Update btn" class="btn btn-link">Update</a>
    </div>

</body>

</html>